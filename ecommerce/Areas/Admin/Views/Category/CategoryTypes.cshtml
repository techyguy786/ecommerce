@model IEnumerable<ecommerce.Models.CategoryType>
@{
    ViewBag.Title = "Category Types";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> Category Types</a>
        </li>
    </ul>
</div>

<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>All Category Types</h4>
                    <p>Add the Category Types to Classify the Different Kinds of Categories.</p>
                    <a class="dropdown-button drop-down-meta" href="#" data-activates="dr-users"><i class="material-icons">more_vert</i></a>
                    <ul id="dr-users" class="dropdown-content">
                        <li>
                            <a href="@Url.Action("AddCategoryType")">Add New</a>
                        </li>
                    </ul>

                    <!-- Dropdown Structure -->

                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><label>SR#</label></th>
                                    <th>@Html.LabelFor(x => Model.First().CategoryTypeName)</th>
                                    <th><label>Edit</label></th>
                                    <th><label>Delete</label></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var categoryType in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                                {
                                    <tr>
                                        <td>
                                            @categoryType.Index 
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => categoryType.Data.CategoryTypeName)</span></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("EditCategoryType", new {id = categoryType.Data.CategoryTypeId})"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("DeleteCategoryType", new {id = categoryType.Data.CategoryTypeId})"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>