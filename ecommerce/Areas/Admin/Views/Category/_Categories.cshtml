@model ecommerce.ViewModels.CategoriesViewModel
@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="@Url.Action("Categories")"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> Category</a>
        </li>
    </ul>
</div>
<div class="sb2-2-add-blog sb2-2-1">
    <div class="box-inn-sp">
        <div class="inn-title">
            <h4>Category</h4>
            <p>Now Add/Edit the Categories Relevant to the Major Categories</p>
        </div>
        <div class="bor">
            <form action="@Url.Action("SaveCategories")" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(x => x.Category.CategoryName, new { @class = "validate", type = "text" })
                        @Html.LabelFor(x => x.Category.CategoryName)
                        @Html.ValidationMessageFor(x => x.Category.CategoryName)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.DropDownListFor(x => x.Category.CategoryTypeId, new SelectList(Model.Types, "CategoryTypeId", "CategoryTypeName"),
                          "Select Major Category Type", null)
                        @Html.LabelFor(x => x.Category.CategoryTypeId)
                        @Html.ValidationMessageFor(x => x.Category.CategoryTypeId)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="submit" class="waves-effect waves-light btn-large" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts1{
    @Scripts.Render("~/bundles/jqueryval")
}