@model IEnumerable<ecommerce.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="sb2-2-2">
    <ul>
        <li>
            <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> Ui Form</a>
        </li>
    </ul>
</div>

<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4> Add Category</h4>
                    <p>Add the Products and Define their Quantity In The Stock.</p>
                    <a class="dropdown-button drop-down-meta" href="#" data-activates="dr-users"><i class="material-icons">more_vert</i></a>
                    <ul id="dr-users" class="dropdown-content">
                        <li>
                            <a href="@Url.Action("AddProduct")">Add New</a>
                        </li>
                    </ul>

                    <!-- Dropdown Structure -->

                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><label>SR#</label></th>
                                    <th><label>Name</label></th>
                                    <th><label>Brand Name</label></th>
                                    <th><label>Category Name</label></th>
                                    <th><label>Discount</label></th>
                                    <th><label>Final Price</label></th>
                                    <th><label>Quantity</label></th>
                                    <th><label>Edit</label></th>
                                    <th><label>Delete</label></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                                {
                                    <tr>
                                        <td>
                                            @product.Index
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => product.Data.Name)</span></a>
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => product.Data.BrandName)</span></a>
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => product.Data.Category.CategoryName)</span></a>
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => product.Data.DiscountPercentage)%</span></a>
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => product.Data.FinalPrice)</span></a>
                                        </td>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Html.DisplayFor(x => product.Data.Quantity)</span></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("EditProduct", new { id = product.Data.ProductId })"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        </td>
                                        <td>
                                            <a href="javascript:void(0)" data-id="@product.Data.ProductId" onclick="deleteProduct(this)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts1 {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Areas/Admin/Scripts/script.js"></script>
}
